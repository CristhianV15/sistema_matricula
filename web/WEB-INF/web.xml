<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SalonServlet</servlet-name>
        <servlet-class>controlador.SalonServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TurnoServlet</servlet-name>
        <servlet-class>controlador.TurnoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InicioServlet</servlet-name>
        <servlet-class>controlador.InicioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CicloServlet</servlet-name>
        <servlet-class>controlador.CicloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>controlador.UsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SeccionServlet</servlet-name>
        <servlet-class>controlador.SeccionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GradoServlet</servlet-name>
        <servlet-class>controlador.GradoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApoderadoServlet</servlet-name>
        <servlet-class>controlador.ApoderadoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SalonServlet</servlet-name>
        <url-pattern>/salon</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TurnoServlet</servlet-name>
        <url-pattern>/turno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioServlet</servlet-name>
        <url-pattern>/inicio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CicloServlet</servlet-name>
        <url-pattern>/ciclo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeccionServlet</servlet-name>
        <url-pattern>/seccion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GradoServlet</servlet-name>
        <url-pattern>/grado</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>ApoderadoServlet</servlet-name>
        <url-pattern>/apoderado</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
